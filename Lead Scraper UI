    <script>
        // Tab functionality
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Remove active class from all tabs
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                // Add active class to clicked tab
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            });
        });
        
        // Sample data for demonstration
        const sampleLeads = [
            {
                name: "John Smith",
                title: "CTO at TechStartup",
                company: "TechStartup",
                location: "San Francisco, CA",
                email: "john@techstartup.com",
                company_website: "https://techstartup.com",
                phone_numbers: ["(415) 555-1234"],
                social_media: {
                    linkedin: "johnsmith",
                    twitter: "johnsmith"
                }
            },
            {
                name: "Sarah Johnson",
                title: "Marketing Director",
                company: "GrowthCo",
                location: "New York, NY",
                email: "sarah@growthco.com",
                company_website: "https://growthco.com",
                phone_numbers: ["(212) 555-6789"],
                social_media: {
                    linkedin: "sarahjohnson",
                    facebook: "sarahjohnson"
                }
            },
            {
                name: "Michael Chen",
                title: "VP of Engineering",
                company: "DataSystems Inc.",
                location: "Austin, TX",
                email: "michael@datasystems.com",
                company_website: "https://datasystems.com",
                phone_numbers: ["(512) 555-4321"],
                social_media: {
                    linkedin: "michaelchen",
                    twitter: "mchen"
                }
            }
        ];
        
        // Search button functionality
        document.getElementById('search-button').addEventListener('click', () => {
            const keywords = document.getElementById('keywords').value;
            if (!keywords) {
                alert('Please enter search keywords');
                return;
            }
            
            // Show loader
            document.getElementById('loader').style.display = 'block';
            
            // Simulate API call with timeout
            setTimeout(() => {
                // Hide loader
                document.getElementById('loader').style.display = 'none';
                
                // Display results
                displayResults(sampleLeads);
                
                // Switch to results tab
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                document.querySelector('.tab[data-tab="results"]').classList.add('active');
                document.getElementById('results').classList.add('active');
            }, 2000);
        });
        
        // Display results function
        function displayResults(leads) {
            const resultsContainer = document.getElementById('results-container');
            
            if (leads.length === 0) {
                resultsContainer.innerHTML = '<p>No results found. Try different search criteria.</p>';
                return;
            }
            
            let html = '';
            
            leads.forEach(lead => {
                html += `
                    <div class="lead-card">
                        <div class="lead-name">${lead.name}</div>
                        <div class="lead-title">${lead.title}</div>
                        <div class="lead-details">
                            <div class="lead-detail"><strong>Company:</strong> ${lead.company}</div>
                            <div class="lead-detail"><strong>Location:</strong> ${lead.location}</div>
                            <div class="lead-detail"><strong>Email:</strong> ${lead.email}</div>
                            <div class="lead-detail"><strong>Website:</strong> <a href="${lead.company_website}" target="_blank">${lead.company_website}</a></div>
                            <div class="lead-detail"><strong>Phone:</strong> ${lead.phone_numbers.join(', ')}</div>
                        </div>
                    </div>
                `;
            });
            
            resultsContainer.innerHTML = html;
        }
        
        // Export buttons functionality
        document.getElementById('export-csv').addEventListener('click', () => {
            alert('Data exported to leads_data.csv');
        });
        
        document.getElementById('export-excel').addEventListener('click', () => {
            alert('Data exported to leads_data.xlsx');
        });
    </script>
</body>
